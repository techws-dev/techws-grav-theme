<h4 class="title mb-2">
    {{ 'BLOG.SIDEBAR.POPULAR_ARTICLES'|t }}
</h4>

<div class="block">
    {% set popular_articles = popular_articles.get() %}
    {% for child in popular_articles %}
    <div class="mb-2">
        <a href="{{ base_url }}{{ child.route }}">{{ child.title }}</a>
    </div>
    {% endfor %}
</div>